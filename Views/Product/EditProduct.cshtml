@model CapstoneGroupProject.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "EditProduct";
}

<div class="mainWrapper">
    <div class="header">
        <h1>EditProduct</h1>
    </div>
    <div class="formInput">
        <form asp-action="EditProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductID" />
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-2">
                    <label asp-for="UnitPrice" class="control-label"></label>
                    <input type="text" asp-for="UnitPrice" class="form-control" min="0" />
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <label asp-for="Supplier" class="control-label"></label>
                    @Html.DropDownListFor(model => model.SupplierID, new SelectList(ViewBag.Suppliers,"Value", "Text"),"Select Category", new { @class = "form-control custom-select mr-sm-2"})
                    <span asp-validation-for="SupplierID" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Category" class="control-label"></label>
                    @Html.DropDownListFor(model => model.CategoryID, new SelectList(ViewBag.Categories,"Value", "Text"),"Select Category", new { @class = "form-control custom-select mr-sm-2"})
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>
            </div>
            <div class="row justify-content-center mt-5">
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-primary" /> |
                    <a asp-action="ListProducts" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>
