@model ApplicationUser

@{
    ViewData["Tile"] = "Delete User";
}

<div>
    <h1>Are you sure you want to delete this user?</h1>
</div>
<div class="row">
    <div class="form-row">
        @using (Html.BeginForm("DeleteUser", "Administration", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            <div>
                @Html.ValidationSummary("", new { @class="text-danger" })
            </div>
            <div class="form-group">
                @Html.HiddenFor(model => model.Id)
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            </div>
            <div class="form-group">
                <input type="submit" value="Yes" class="btn btn-primary" />
                @Html.ActionLink("No", "AllUsers", "Administration", "", new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>

