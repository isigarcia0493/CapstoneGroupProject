@model EditUserViewModel

@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit</h1>
<div class="row">
    <div class="form-row">
        @using (Html.BeginForm("EditUser", "Administration", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            <div>
                @Html.ValidationSummary("", new { @class="text-danger" })
            </div>
            <div class="form-group">
                @Html.HiddenFor(model => model.Id)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, new { @class="required" })
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class="text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class="required" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class="text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "AllUsers", "Administration", "", new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>
