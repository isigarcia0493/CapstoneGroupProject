@model CreateRoleViewModel

@{
    ViewData["Tile"] = "Add New Role";
}

<div class="mainWrapper">
    <div class="tableList">
        <div class="header">
            <h1>Add New Role</h1>
        </div>
        @using (Html.BeginForm("CreateRole", "Administration", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.RoleName, new { @class = "required" })
                @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mt-5 offset-5">
                <input type="submit" value="Add Role" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "ListRoles", "Administration", "", new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>
