@model IdentityRole

@{
    ViewData["Title"] = "Delete Role";
}

<div class="mainWrapper">
    <div class="tableList">
        <div class="header mb-5">
            <h1>Are you sure you want to delete this role?</h1>
        </div>
        @using (Html.BeginForm("DeleteRole", "Administration", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.HiddenFor(model => model.Id)
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mt-5 offset-5">
                <input type="submit" value="Yes" class="btn btn-primary" />
                @Html.ActionLink("No", "ListRoles", "Administration", "", new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>




