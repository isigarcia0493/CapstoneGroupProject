@model CapstoneGroupProject.Models.Supplier

@{
    ViewData["Title"] = "DeleteSupplier";
}

<div class="mainWrapper">
    <div class="header">
        <h1>Are you sure you want to delete this supplier?</h1>
    </div>
    <div class="details">
        <dl class="row">
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.SupplierName)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.SupplierName)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.State)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.State)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.ZipCode)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.ZipCode)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>
        <div class="row justify-content-center mt-5">
            <form asp-action="DeleteSupplier">
                <input type="hidden" asp-for="SupplierID" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="IndexSupplier" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>


<div>
    <h4>Supplier Information</h4>
    <hr />
    


</div>
