@model IEnumerable<Category>

@{
    ViewData["Title"] = "IndexCategory";
}

<div class="mainWrapper">
    <div class="tableList">
        <div class="header">
            <h1>List of Categories</h1>
        </div>
        <p>
            
        </p>
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryDescription)
                </th>
                <th style="text-align: center;">
                    <a asp-action="CreateCategory" class="btn btn-success">Create New</a>
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryDescription)
                    </td>
                    <td style="text-align: center;">
                        <a asp-action="EditCategory" asp-route-id="@item.CategoryID" class="btn btn-primary">Edit</a> |
                        <a asp-action="DeleteCategory" asp-route-id="@item.CategoryID" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
