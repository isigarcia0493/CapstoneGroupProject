@model CapstoneGroupProject.Models.Category

@{
    ViewData["Title"] = "DeleteCategory";
}

<div class="mainWrapper">
    <div class="header">
        <h1>Are you sure you want to delete this category?</h1>
    </div>
    <div class="details">
        <dl class="row">
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.CategoryID)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.CategoryID)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.CategoryName)
            </dt>
            <dd class="col-sm60">
                @Html.DisplayFor(model => model.CategoryName)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.CategoryDescription)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.CategoryDescription)
            </dd>
        </dl>
        <div class="row justify-content-center mt-5">
            <form asp-action="DeleteCategory">
                <input type="hidden" asp-for="CategoryID" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="IndexCategory" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
